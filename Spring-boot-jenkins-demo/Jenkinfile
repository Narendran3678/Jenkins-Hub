pipeline {
    agent any
    environment {
        userName="Narendran"
    }

    stages {
        stage("checkout") {
            steps {
                script {
                    def gitRepoUrl = "https://github.com/Narendran3678/Jenkins-Hub.git"
                    checkout([$class: 'GitSCM',
                        branches: [[name: '*/main']],
                        userRemoteConfigs: [[url: gitRepoUrl]],
                        extensions: [[$class: 'CleanBeforeCheckout'], [$class: 'CloneOption', noTags: false, shallow: true, depth: 1]]
                    ])
                }
            }
        }

        stage("Build") {
            steps {
                echo "############################# Build Stage Started ###############################"
                 bat '''
                cd Spring-boot-jenkins-demo
                mvn clean install -DskipTests=true
                '''
                echo "############################# Build Stage Completed #############################"
            }
        }

        stage("Test") {
            steps {
                echo "############################# Test Stage Started ###############################"
                bat '''
                cd Spring-boot-jenkins-demo
                mvn test
                '''
                echo "############################# Test Stage Completed #############################"
            }
        }

        stage("Deploy") {
            input {
                message 'Enter Environment [1.  Prod, 2. Dev, 3. QA, 4. UAT]'
                ok 'Deploy'
                parameters {
                    string(name: 'ENVIRONMENT', defaultValue: 'Prod', description: 'Environment to Deploy')
                }
            }
            steps {
                echo "Deploying into $ENVIRONMENT"
            }
        }
    }

    post {
        always {
            junit '**/target/surefire-reports/*.xml'
            echo "Posting Test Results"
        }
        success {
            echo "Pre Process Completed Successfully."
            archiveArtifacts artifacts: '*.jar'
            echo "Archiving Jar Files."
        }
        failure {
            echo "Checkout Failed for User $userName"
        }
    }
}
